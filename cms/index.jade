        | Placeholder

      .navigation
        button.get-started.next(ng-click='step = step + 1')
          | Get Started

    .container(ng-show='isVisible(1, step)')
      .left.form
        .row
          h2.subtitle.step
            | Step {{ step }} of 8

          h2.subtitle
            | Select your theme

          .dropdown
            .dropdowns(ng-click='showThemes = !showThemes')
              span {{ selectedTheme  || "Theme One" }}

              .dropdown-button
                span.dropdown-arrow

            ul(
              ng-class='{open: showThemes}',
              ng-init="themeOptions = ['Theme One', 'Theme Two', 'Theme Three']")
              li(
                ng-repeat='themeOption in themeOptions',
                ng-mouseover='$parent.selectedTheme = themeOption',
                ng-click='$parent.showThemes = !showThemes')
                | {{ themeOption }}

      .preview
        .dropdown.small
          .dropdowns(
            ng-click='showDeviceDropdown = !showDeviceDropdown')
            span {{ selectedDevice || "Desktop" }}

            .dropdown-button
              span.dropdown-arrow

          ul(
            ng-class='{open: showDeviceDropdown}',
            ng-init="deviceOptions = ['desktop', 'tablet', 'phone']")
            li(
              ng-repeat='option in deviceOptions',
              ng-mouseover='$parent.selectedDevice = option',
              ng-click='$parent.showDeviceDropdown = !showDeviceDropdown')
              {{ option }}

      .navigation
        button.prev(ng-click='step = step - 1') Prev

        button.next(ng-click='step = step + 1') Next

    .container(ng-show='isVisible(2, step)')
      .left.form
        .row
          h2.subtitle.step
            | Step {{ step }} of 8
          h2.subtitle
            | Logo

          ul.options(
            ng-init="logoOptions = ['State Seal', 'Logo', 'None']; selectedLogoOption = logoOptions[0]")
            li.option(
              ng-repeat='logoOption in logoOptions',
              ng-class='{selected: $parent.selectedLogoOption == logoOption}',
              ng-click='$parent.selectedLogoOption = logoOption')
              {{ logoOption }}

          .logo-url(ng-show="selectedLogoOption == 'Logo'")
            h2.subtitle
               Enter URL

            input(
              class='url-input' type='text', name='url', ng-model='logoUrl')

          .dropdown(
            ng-show="selectedLogoOption == 'State Seal'")
            .dropdowns(
              ng-click='showStates = !showStates')
              span {{ selectedState || "Select your state" }}

              .dropdown-button
                span.dropdown-arrow

            ul(
              ng-class='{open: showStates}',
              ng-init="states = [ 'Alabama', 'Alaska', 'American Samoa', 'Arizona', 'Arkansas', 'California', 'Colorado', 'Connecticut', 'Delaware', 'District Of Columbia', 'Federated States Of Micronesia', 'Florida', 'Georgia', 'Guam', 'Hawaii', 'Idaho', 'Illinois', 'Indiana', 'Iowa', 'Kansas', 'Kentucky', 'Louisiana', 'Maine', 'Marshall Islands', 'Maryland', 'Massachusetts', 'Michigan', 'Minnesota', 'Mississippi', 'Missouri', 'Montana', 'Nebraska', 'Nevada', 'New Hampshire', 'New Jersey', 'New Mexico', 'New York', 'North Carolina', 'North Dakota', 'Northern Mariana Islands', 'Ohio', 'Oklahoma', 'Oregon', 'Palau', 'Pennsylvania', 'Puerto Rico', 'Rhode Island', 'South Carolina', 'South Dakota', 'Tennessee', 'Texas', 'Utah', 'Vermont', 'Virgin Islands', 'Virginia', 'Washington', 'West Virginia', 'Wisconsin', 'Wyoming' ]")
              li(
                ng-repeat='state in states',
                ng-mouseover='$parent.selectedState = state',
                ng-click='$parent.showStates = !showStates')
                | {{ state }}

      .preview
        img(
          ng-src='{{logoUrl}}')

        h1  {{ logoUrl }}

      .navigation
        button.prev(
          ng-click='step = step - 1') Prev

        button.next(
          ng-click='step = step + 1') Next

    .container(ng-show='isVisible(3, step)')
