svg(x="50", y="17", width="428", height="320", viewbox="0 0 136 102", preserveAspectRatio="xMinYMin slice")
  defs
    pattern(id="theme", patternUnits="userSpaceOnUse", width="135", height="102")
      image(ng-attr-xlink:href='{{ themeUrl(selectedTheme) | unsafeResource }}' xlink:href='' x="0", y="0", width="135", height="102")
  rect(fill="url(#theme)", xlink:href="", x="0", y="0", width="136", height="101.5" style="stroke-width: 2; stroke: rgb(0,0,0);")
  image(class="mobile-seal" ng-show="selectedLogoOption == 'State Seal'", ng-attr-xlink:href='{{ stateSealUrl(selectedState) | unsafeResource }}', xlink:href='', x="60", y="5", width="15", height="15")
  image(ng-show="selectedLogoOption == 'Logo'", ng-attr-xlink:href='{{ logoURL(logoUrl) | unsafeResource }}', xlink:href='', x="60", y="5", width="15px", height="15px")
  text(x="67" y="29" text-anchor="middle" font-size="10px") {{ title }}
  text(x="67" y="37" text-anchor="middle" font-size="7px") {{ subtitle }}
  rect(fill="#bbb", x="27", y="40", width="80", height="30")
  rect(fill="#fff", x="37", y="50", width="60", height="5")