<div class="box" id="alert">
  <span id="text"></span>
  <span id="alert-close">x</span>
</div>

<div class="info box left" id="registered-address">
  Registered Voter Address
  <span>Edit</span>
</div>

<div class="box left">
  {{> address data.normalizedInput }}
  <input type="text" class="change-address" placeholder="Enter a different address">
  {{!-- <img src="images/magnifying-glass.svg" class="magnifying-glass change-address"> --}}
</div>

<div class="info box left" id="more-elections">
  Elections
  <span>
    <img src="./images/plus.png" class="toggle-image plus">
    <img src="./images/minus.png" class="toggle-image minus hidden">
  </span>
</div>

<div class="info box left" id="election-list">
  <div class="election-selection">
    {{!-- <div class="radio checked"><div class="radio-selected"></div></div> --}}
    <img src="./images/radio-checked.png" class="radio checked">
    <img src="./images/radio-unchecked.png" class="radio unchecked hidden">
    <span class="hidden">{{ data.election.id }}</span>
    {{ data.election.name }}
  </div>
  {{#each data.otherElections }}
  <div class="election-selection">
    {{!-- <div class="radio"><div class="radio-selected"></div></div> --}}
    <img src="./images/radio-checked.png" class="radio checked hidden">
    <img src="./images/radio-unchecked.png" class="radio unchecked">
    <span class="hidden">{{ id }}</span>
    {{ name }}
  </div>
  {{/each}}
</div>

<div class="box left" id="chosen-election">
  {{>election data.election}}
  <a href="" title="{{ data.election.name }}" class="addthisevent" style="background-image: url('./images/calendar.png'); float: right; margin-top: -30px; margin-right: 2px; background-color: transparent; border: 0; height: 20px; width: 20px; background-size: contain; padding: 0; background-position: center;">

      <span class="_start"> {{data.election.dateForCalendar }}</span>
      <span class="_end"> {{data.election.dateForCalendar }}</span>
      <span class="_summary">{{ data.election.name }}</span>
      <span class="_description">{{ data.election.name }}</span>
      <span class="_location">{{> address data.pollingLocations.0.address }}</span>
      <span class="_all_day_event">true</span>
      <span class="_date_format">MM/DD/YYYY</span>
  </a> 
  <!-- <img src="./images/calendar.png"> -->
</div>

<div class="info box left" id="polling-location">
  Polling Location:
  <span id="map-toggle">
    <img src="./images/plus.png" class="toggle-image plus">
    <img src="./images/minus.png" class="toggle-image minus hidden">
  </span>
</div>

<div id="location" class="box right">
  {{> address data.pollingLocations.0.address }}
  <span>
    <a href="#" target="_blank">
      <img src="./images/directions.png">
    </a>
  </span>
</div>
<div id="map-canvas" class="right"></div>

<div class="info box left" id="resources-toggle">
  Voter Resources
  <span>
    <img src="./images/plus.png" class="toggle-image plus">
    <img src="./images/minus.png" class="toggle-image minus hidden">
  </span>
</div>
<div class="box information-items right" id="about-resources">
  Information on how to navigate the elections process, including deadlines, Voter ID information, and registration links.
</div>
<div id="more-resources" class="right">
  <div class="subsection box">
  Local Election Administration
  </div>
  <div class="correspondence-address box">
  <h1>Local Jurisdiction</h1>
  <b>{{ data.state.0.local_jurisdiction.electionAdministrationBody.name }}</b>
  <b>{{ data.state.0.local_jurisdiction.name }}</b><br>
  {{ data.state.0.local_jurisdiction.electionAdministrationBody.hoursOfOperation }}
  {{> normalized-address data.state.0.local_jurisdiction.electionAdministrationBody.correspondenceAddress }}
  {{> normalized-address data.state.0.local_jurisdiction.electionAdministrationBody.physicalAddress }}
  <br>
  <h1>State Elections Office</h1>
  <b>{{ data.state.0.electionAdministrationBody.name }}</b>
  {{ data.state.0.electionAdministrationBody.hoursOfOperation }}
  {{> normalized-address data.state.0.electionAdministrationBody.correspondenceAddress }}
  {{> normalized-address data.state.0.electionAdministrationBody.physicalAddress }}
  </div>
  <div class="subsection box">
  Additional Resources
  </div>
  <div class="box information-links">
  {{> election-administration-body data.state.0.electionAdministrationBody }}
  </div>
  <div class="subsection box">
  Voter ID Requirements
  </div>
  <div class="box information-items">
    <div class="voter-id-info">
    {{#each data.voterId }}
      <div class="question">{{ question }}</div>
      <div class="answer">{{ answer }}</div>
    {{/each}}
    <a href="{{ data.voterIdLink }}">Link</a>
    </div>
  {{!-- {{> election-administration-body data.state.0.electionAdministrationBody }}
  {{> election-administration-body data.state.0.local_jurisdiction.electionAdministrationBody }} --}}
  </div>
</div>
{{!-- <div id="voter-resources" class="box">
Voter Resources
<div class="right-arrow"></div>
</div> --}}

<div class="info box left" id="ballot-information">
  Ballot Information
  <span>
    <img src="./images/plus.png" class="toggle-image plus hidden">
    <img src="./images/minus.png" class="toggle-image minus">
  </span>
</div>
<div class="contests right" id="all-contests">
{{#each data.contests}}
{{> contest}}
{{/each}}
</div>

<div class="footer">
  <span>
  For the most complete and up to date information, consult your local election official.
  </span>
  <a href="#" target="_blank"><i id="info-icon">i</i></a>
  {{!-- <i id="plus-icon">+</i> --}}
</div>

{{> modals }}
<div id="fade"></div>