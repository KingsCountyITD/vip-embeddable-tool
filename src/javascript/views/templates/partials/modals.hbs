<div class="modal" id="about">
  <h2>{{assets.text.about.title}}</h2>
  <p>{{assets.text.about.content}}</p>
  <div id="close-button"><img src="{{ image 'plus.png' }}"></div>
  <div class="close-modal-text-button"> Close </div>
</div>
<div class="modal" id="address-not-found">
  <h2>{{assets.text.addressNotFound.title}}</h2>
  {{{assets.text.addressNotFound.text}}}
  <button id="not-found-button">{{assets.text.addressNotFound.button}}</button>
</div>
<div class="modal" id="current-location">
  <h2>{{assets.text.mailInVoting.title}}</h2>
  <p>{{assets.text.mailInVoting.text}}</p>
  <span>
    <button id="use-registered-address">{{assets.text.mailInVoting.registeredAddress}}</button>
    <button id="use-current-location">{{assets.text.mailInVoting.currentLocation}}</button>
    <button id="use-different-address">{{assets.text.inputs.differentAddress}}</button>
  </span>
</div>
<div class="modal" id="out-of-state">
  <h2>Out-of-state Address</h2>
  <p>Sorry, looks like you are out of state right now. Here are the results for your registered address.</p>
  <p><button>Continue</button></p>
</div>
<img src="{{ image 'spinner.svg' }}" class="loading">
